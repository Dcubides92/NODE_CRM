    <div class="container">
        <h2>Registro Datos Cliente</h2>
        <div class="d-flex estiloFila p-2 ">
            <form action="/nuevoCliente" method="POST">
                <div class="row ">
                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="fecha" class="col-4  col-form-label">Fecha Inicio</label>
                            <div class="col-sm-8" id="fecha">
                                <input type="date" id="fecha" name="fecha" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row  ">
                            <label for="estado" class="col-sm-4 col-form-label">Estado</label>
                            <div class="col-sm-8 ">
                                <select name="estado" id="" class="form-select " placeholder="Selecionar una Opción">
                                    <option>Selecionar una Opción</option>
                                    <option value="interesado">Interesado</option>
                                    <option value="Presupuesto enviado"> Presupuesto enviado</option>
                                    <option value="Cliente">Cliente</option>
                                    <option value="Cliente recurrente">Cliente recurrente</option>
                                    <option value="No Cliente">No Cliente</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row  ">
                            <label for="nombre" class="col-4  col-form-label">Nombres</label>
                            <div class="col-sm-8">
                                <input type="text" id="nombre" name="nombre" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="apellidos" class="col-4 col-form-label">Apellidos</label>
                            <div class="col-sm-8"><input type="text" name="apellidos" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-4 col-form-label">E-mail</label>
                            <div class="col-sm-8">
                                <input type="email" name="email" class="form-control" placeholder="email@example.com">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Telefono</label>
                            <div class="col-sm-8">
                                <input type="number" name="telefono" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">País</label>
                            <div class="col-sm-8"><input type="text" name="pais" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Ciudad</label>
                            <div class="col-sm-8"><input type="text" name="ciudad" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Dirección</label>
                            <div class="col-sm-8"><input type="text" name="direccion" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Instagram</label>
                            <div class="col-sm-8"><input type="text" name="instagram" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Facebook</label>
                            <div class="col-sm-8"><input type="text" name="facebook" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Linkedin</label>
                            <div class="col-sm-8"><input type="text" name="linkedin" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Twitter</label>
                            <div class="col-sm-8"><input type="text" name="twitter" class="form-control">
                            </div>
                        </div>
                    </div>
                    <br><br>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckIndeterminate">
                        <label class="form-check-label" for="flexCheckIndeterminate">

                            Acepta política de tratamiento de datos personales y aviso de privacidad y Autorización para la
                            utilización de datos personales.

                        </label>
                    </div>
                    <br><br>
                    <div class="mb-3">
                        <button type="submit " class="btn btn-primary">Registrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th style="width: 150px;">Fecha</th>
                    <th style="width: 150px;">Nombre</th>
                    <th style="width: 300px;">Apellidos</th>
                    <th style="width: 150px;">E-Mail</th>
                    <th style="width: 300px;">Telefono</th>
                    <th style="width: 300px;">País</th>
                    <th style="width: 150px;">Ciudad</th>
                    <th style="width: 150px;">Dirección</th>
                    <th style="width: 150px;">Instagram</th>
                    <th style="width: 150px;">Facebook</th>
                    <th style="width: 150px;">linkedin</th>
                    <th style="width: 150px;">Twitter</th>
                    <th style="width: 150px;">Estado</th>
                    <th style="width: 150px;">Opciones</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < clientes.length; i++){ %>
                    <tr>
                        <td>
                            <%= clientes[i].fecha %>
                        </td>
                        <td>
                            <%= clientes[i].nombre %>
                        </td>
                        <td>
                            <%= clientes[i].apellidos %>
                        </td>
                        <td>
                            <%= clientes[i].email %>
                        </td>
                        <td>
                            <%= clientes[i].telefono %>
                        </td>
                        <td>
                            <%= clientes[i].pais %>
                        </td>
                        <td>
                            <%= clientes[i].ciudad %>
                        </td>
                        <td>
                            <%= clientes[i].direccion %>
                        </td>
                        <td>
                            <%= clientes[i].instagram %>
                        </td>
                        <td>
                            <%= clientes[i].facebook %>
                        </td>
                        <td>
                            <%= clientes[i].linkedin %>
                        </td>
                        <td>
                            <%= clientes[i].twitter %>
                        </td>
                        <td>
                            <%= clientes[i].estado %>
                        </td>
                        <td>
                            <a href="/modificar/<%= clientes[i]._id %>">[Modificar]</a>
                            <a href="/eliminar/<%= clientes[i]._id %>">[Eliminar]</a>
                            <a href="/estado/<%= clientes[i]._id %>">[Historial]</a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
