<%- include ('partials/header'); %>

    <div class="container">
        <h2>Registrar Datos del Cliente</h2>
        <div class="d-flex estiloFila p-2 ">
            <form action="/nuevoCliente" method="POST">
                <div class="row ">
                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="fecha" class="col-4  col-form-label">Fecha Inicio*</label>
                            <div class="col-sm-8" id="fecha">
                                <input type="date" id="fecha" name="fecha" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row  ">
                            <label for="estado" class="col-sm-4 col-form-label">Estado</label>
                            <div class="col-sm-8 ">
                                <select name="estado" id="" class="form-select">
                                    <option>Seleccionar una Opción</option>
                                    <option value="interesado">Interesado</option>
                                    <option value="Presupuesto enviado"> Presupuesto enviado</option>
                                    <option value="Cliente">Cliente</option>
                                    <option value="Cliente recurrente">Cliente recurrente</option>
                                    <option value="No Cliente">No Cliente</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row  ">
                            <label for="t_documento" class="col-4  col-form-label">Tipo documento*</label>
                            <div class="col-sm-8 ">
                                <select name="t_documento" id="" class="form-select">
                                    <option>Seleccionar una Opción</option>
                                    <option value="Cedula Ciudadania">Cédula de Ciudadanía</option>
                                    <option value="Tarjeta Identidad">Tarjeta de Identidad</option>
                                    <option value="Cedula Extranjeria">Cédula de Extranjería</option>
                                    <option value="Carnet Diplomatico">Carnet Diplomático</option>
                                    <option value="Pasaporte">Pasaporte</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="no_documento" class="col-4 col-form-label">No. documento*</label>
                            <div class="col-sm-8"><input type="text" name="no_documento" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row  ">
                            <label for="nombre" class="col-4  col-form-label">Nombres*</label>
                            <div class="col-sm-8">
                                <input type="text" id="nombre" name="nombre" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="apellidos" class="col-4 col-form-label">Apellidos*</label>
                            <div class="col-sm-8"><input type="text" name="apellidos" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-4 col-form-label">E-mail</label>
                            <div class="col-sm-8">
                                <input type="email" name="email" class="form-control" placeholder="email@example.com">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Telefono*</label>
                            <div class="col-sm-8">
                                <input type="number" name="telefono" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">País*</label>
                            <div class="col-sm-8"><input type="text" name="pais" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Ciudad*</label>
                            <div class="col-sm-8"><input type="text" name="ciudad" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Dirección</label>
                            <div class="col-sm-8"><input type="text" name="direccion" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Instagram</label>
                            <div class="col-sm-8"><input type="text" name="instagram" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Facebook</label>
                            <div class="col-sm-8"><input type="text" name="facebook" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Linkedin</label>
                            <div class="col-sm-8"><input type="text" name="linkedin" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row ">
                            <label for="" class="col-sm-4 col-form-label">Twitter</label>
                            <div class="col-sm-8"><input type="text" name="twitter" class="form-control">
                            </div>
                        </div>
                    </div>
                    <br><br>

                    <div class="form-group">
                        <div class="custom-control md-3 ">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckIndeterminate">
                                <label class="form-check-label" for="flexCheckIndeterminate">

                                    Acepta política de tratamiento de datos personales y aviso de privacidad y
                                    Autorización para la
                                    utilización de datos personales.

                                </label>                                
                            </div>
                        </div>
                        <label class="form-check-label">*Campos obligatorios</label>
                    </div>
                    <br>
                    <div class="row justify-content-end ">
                        <div class="col-lg-1 boton1  ">
                            <button type="submit " class=" btn btn-primary  btn-outline-secundary">Registrar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include ('partials/footer'); %>