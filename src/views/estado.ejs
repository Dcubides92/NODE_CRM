<%- include ('partials/header'); %>
    <div class="container">
        <form action="/modificarestado" method="POST">
            <input type="hidden" name="id_cliente" value="<%= id %>"class="form-control">
            <div class="mb-3">
                <label for="">Cliente</label><input type="text" name="cliente" value="<%= cliente %>" class="form-control" readonly>
            </div>
            <div class="mb-3">
                <label for="">Estado actual</label><input type="text" name="estado_actual" value="<%= estado_actual %>"class="form-control" disabled>
            </div>
            <div class="mb-3">
                <label for="">Fecha</label><input type="date" name="fecha" class="form-control">
            </div>          
            <div class="mb-3">
                <label for="">Estado nuevo</label>
                <select name="estado" id="">
                    <option disabled="estado">Selecionar una Opcion</option>
                    <option value="interesado">Interesado</option>
                    <option value="Presupuesto enviado"> Presupuesto enviado</option>
                    <option value="Cliente">Cliente</option>
                    <option value="Cliente recurrente">Cliente recurrente</option>
                    <option value="No Cliente">No Cliente</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="">Observaciones</label>
                <textarea name="observaciones" id="" cols="30" rows="5" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </form>
    </div>
    <div>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th style="width: 150px;">Fecha</th>
                    <th style="width: 150px;">Cliente</th>
                    <th style="width: 300px;">Observaciones</th>
                    <th style="width: 150px;">Estado</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < estado.length; i++){ %>
                    <tr>
                        <td>
                            <%= estado[i].fecha %>
                        </td>
                        <td>
                            <%= estado[i].cliente %>
                        </td>
                        <td>
                            <%= estado[i].observaciones %>
                        </td>
                        <td>
                            <%= estado[i].estado %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
<%- include ('partials/footer'); %>