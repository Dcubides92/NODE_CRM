<%- include ('partials/header'); %>
    <div class="container">
        <h2>Modificar Estado del Cliente</h2>
        <div class="d-flex estiloFila ">
            <form action="/modificarestado" method="POST">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group row">
                            <label for="" class="col-sm-4 col-form-label">Cliente</label>
                            <div class="col-sm-8">
                                <input type="hidden" name="id_cliente" value="<%= id %>">
                                <input type="text" name="cliente" value="<%= cliente %>" class="form-control" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row">
                            <label for="" class="col-sm-4 col-form-label">Estado actual</label>
                            <div class="col-sm-8">
                                <input type="text" name="estado_actual" value="<%= estado_actual %>" class="form-control" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row">
                            <label for="" class="col-sm-4 col-form-label">Fecha</label>
                            <div class="col-sm-8">
                                <input type="date" name="fecha" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row">
                            <label for="" class="col-sm-4 col-form-label">Estado nuevo</label>
                            <div class="col-sm-8">
                                <select name="estado" id="" class="form-select">
                                    <option disabled="estado">Selecionar una Opcion</option>
                                    <option value="interesado">Interesado</option>
                                    <option value="Presupuesto enviado"> Presupuesto enviado</option>
                                    <option value="Cliente">Cliente</option>
                                    <option value="Cliente recurrente">Cliente recurrente</option>
                                    <option value="No Cliente">No Cliente</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row">
                            <label for="" class="col-sm-4 col-form-label">Observaciones</label>
                            <div class="col-sm-8">
                                <textarea name="observaciones" id="" cols="30" rows="5" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-end ">
                        <div class="col-lg-1 boton1  ">
                            <button type="submit" class=" btn btn-primary  btn-outline-secundary">Registrar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <br>
    <br>
    <div class="container tablaestado">
        <table class="table table-hover ">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th>Observaciones</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < estado.length; i++){ %>
                    <tr>
                        <td>
                            <%= estado[i].fecha %>
                        </td>
                        <td>
                            <%= estado[i].cliente %>
                        </td>
                        <td>
                            <%= estado[i].observaciones %>
                        </td>
                        <td>
                            <%= estado[i].estado %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>

    <%- include ('partials/footer'); %>